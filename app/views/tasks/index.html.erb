<h1>My Tasks</h1>

<ol>
  <% @tasks.each do |task|%>
    <li>
    <%= link_to task.title, task_path(task.id) %>
    <%= link_to "(Delete)", destroy_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ol>

<br>
<%= link_to "+ Add a new task", new_path %>
